import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class watchlist {
	
	public static void main(String[] args)throws Exception {
	//Open connection to MySQL
	Connection connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/cs157aprojectteam6/Movie","root", "Halo4mlg!");
	
	// Importing Movie table info
	String movieInfo = "SELECT * FROM cs157aprojectteam6.Movie;";
	Statement statement = connection.createStatement();
	ResultSet result = statement.executeQuery(movieInfo);
	//show available films
	while (result.next()) {
		int movieID = result.getInt("movieID");
		String title = result.getString("title");
		int year = result.getInt("year");
		System.out.println(movieID + ", " + title +","+ year);
		
		}
	// Close connection
	connection.close();
	}
}
