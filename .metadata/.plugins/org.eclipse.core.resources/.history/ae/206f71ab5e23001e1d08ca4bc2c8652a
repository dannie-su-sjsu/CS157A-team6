import java.sql.*;

public class MovieManager {

	public static void main(String[]args) {
		String jdbcURL ="jdbc:mysql://localhost:3306/cs157aprojectteam6";
		//Open connection to MySQL
		Connection connection;
		try {
			connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/cs157aprojectteam6","root", "Halo4mlg!");
			// Importing Movie table info
			String movieInfo = "SELECT * FROM cs157aprojectteam6.Movie;";
			Statement statement = connection.createStatement();
			ResultSet result = statement.executeQuery(movieInfo);
			//show available films
			System.out.println("movieID" + "Title" +", "+ "Year Released");
			while (result.next()) {
				int movieID = result.getInt("movieID");
				String title = result.getString("title");
				int year = result.getInt("year");
				System.out.println(movieID + ", " + title +", "+ year);
				
				}
			// Close connection
			connection.close();
		
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
